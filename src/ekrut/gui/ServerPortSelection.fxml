<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ekrut.gui.ServerPortSelectionController">
   <children>
      <Label text="Please select a port to listen on:" />
      <TextField fx:id="portTxt">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </TextField>
      <Label fx:id="redLabel" text="Port must be a valid integer in the range 1 - 65535" textFill="RED" visible="false" />
      <Button fx:id="portSelectBtn" alignment="CENTER" mnemonicParsing="false" onAction="#selectPort" text="Select" textAlignment="CENTER" />
   </children>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
